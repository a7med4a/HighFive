<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Smart Button to Branch Form -->
    <record id="view_highfive_branch_form_inherit_booking" model="ir.ui.view">
        <field name="name">highfive.partner.branch.form.inherit.booking</field>
        <field name="model">highfive.partner.branch</field>
        <field name="inherit_id" ref="highfive_core.view_highfive_partner_branch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_bookings" type="object" 
                        class="oe_stat_button" icon="fa-calendar">
                    <field name="booking_count" widget="statinfo" string="Bookings"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
