<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/h1[1]/field[@name='name']" position="after">
                    <field name="english_name" placeholder="English Name..."/>
                  </xpath>
                   <xpath expr="//div[@class='o_address_format']" position="after">
                        <span class="o_form_label o_td_label" name="address_name">
                                <b invisible="not is_company">English Address</b>
                        </span>
                        <div class="o_address_format2">
                                <field name="english_address" placeholder="English Street1..." class="o_address_street" readonly="type == 'contact' and parent_id"/>
                                <field name="english_street2" placeholder="English Street 2..." class="o_address_street" readonly="type == 'contact' and parent_id"/>
                                <field name="english_city" placeholder="English City" class="o_address_street" readonly="type == 'contact' and parent_id"/>
                                <field name="english_country" placeholder="English country" class="o_address_street" readonly="type == 'contact' and parent_id"/>

                            </div>
                  </xpath>
            </field>
        </record>

    </data>
</odoo>