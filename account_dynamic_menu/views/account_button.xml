<odoo>
    <record id="view_account_form_custom_button" model="ir.ui.view">
        <field name="name">account.account.custom.button</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="create_separate_menu"
                        type="object"
                        string="إنشاء قائمة منفصلة"
                        class="oe_stat_button"
                        icon="fa-list" />
            </xpath>

        </field>
    </record>
</odoo>
