<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_partner_code" model="ir.actions.server">
            <field name="name">Generate Code for Partner</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                for rec in records:
                rec.action_generate_code()
            </field>
        </record>

        <record id="action_product_code" model="ir.actions.server">
            <field name="name">Generate Code for Product</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                for rec in records:
                    rec.action_generate_code()
            </field>
        </record>

    </data>
</odoo>