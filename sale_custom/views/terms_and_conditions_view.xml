<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="terms_and_conditions_form_view" model="ir.ui.view">
            <field name="name">terms.and.conditions.form</field>
            <field name="model">terms.and.conditions</field>
            <field name="arch" type="xml">
                <form string="Terms and Conditions">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="description"/>
                            <field name="sit_is_default"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="terms_and_conditions_tree_view" model="ir.ui.view">
            <field name="name">Terms and Conditions</field>
            <field name="model">terms.and.conditions</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="sit_is_default"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="terms_and_conditions_action_id" model="ir.actions.act_window">
            <field name="name">Terms and Conditions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">terms.and.conditions</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_create">
                    Create your first terms and conditions record.
                </p>
                <p>
                    Track and manage terms and conditions easily.
                </p>
            </field>
        </record>

        <!-- Menus -->
        <menuitem id="terms_and_conditions_categ_id" name="all terms and conditions" parent="terms_and_conditions_menu_id"
                  action="terms_and_conditions_action_id" sequence="5"/>
    </data>
</odoo>
