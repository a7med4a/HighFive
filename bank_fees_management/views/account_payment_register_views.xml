<odoo>
    <record id="view_account_payment_register_form_inherit_bank_fees_wizard" model="ir.ui.view">
        <field name="name">account.payment.register.form.inherit.bank.fees.wizard</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="journal_type" invisible="1"/>
                <field name="bank_fees_amount" invisible="journal_type != 'bank'"/>
                <field name="bank_fees_account_id" invisible="journal_type != 'bank'"/>
            </xpath>
        </field>
    </record>
</odoo>

