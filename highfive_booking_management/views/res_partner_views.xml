<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Smart Button to Partner Form -->
    <record id="view_partner_form_inherit_booking" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.booking</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_bookings" type="object" 
                        class="oe_stat_button" icon="fa-calendar"
                        invisible="booking_count == 0 or not highfive_partner_id">
                    <field name="booking_count" widget="statinfo" string="Bookings"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
