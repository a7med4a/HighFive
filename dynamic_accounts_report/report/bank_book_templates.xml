<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Report Template for Bank Book.-->
    <template id="bank_book">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="data_report_margin_top" t-value="12"/>
                <t t-set="data_report_header_spacing" t-value="9"/>
                <t t-set="data_report_dpi" t-value="110"/>
                <div class="page">
                    <!-- Report Title -->
                    <h3 class="text-center">
                        <b>
                            <span t-esc="report_name"/>
                        </b>
                    </h3>
                    <br/>
                    <!-- Filters -->
                    <table class="table table-borderless" style="font-size:14px;">
                        <tbody>
                            <tr style="background-color:#d6dbe1;">
                                <th>Date Range</th>
                                <th>Partner</th>
                                <th>Account</th>
                                <th>Options</th>
                            </tr>
                            <tr>
                                <td>
                                    <t t-if="filters['start_date']" t-out="filters['start_date']"/>
                                    <t t-if="filters['end_date']">to
                                        <t t-out="filters['end_date']"/>
                                    </t>
                                </td>
                                <td>
                                    <t t-foreach="filters['partner']" t-as="selected_partner" t-key="partner_index">
                                        <t t-out="selected_partner['display_name']"/>,
                                    </t>
                                </td>
                                <td>
                                    <t t-set="first_account" t-value="True"/>
                                    <t t-foreach="filters['account']" t-as="selected_account">
                                        <t t-if="not first_account">,</t>
                                        <t t-out="selected_account"/>
                                        <t t-set="first_account" t-value="False"/>
                                    </t>
                                </td>
                                <td>
                                    Posted,
                                    <t t-foreach="filters['options']" t-as="selected_options" t-key="options_index">
                                        <t t-out="selected_options"/>,
                                    </t>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <br/>

                    <!-- Bank Book Data -->
                    <t t-if="move_lines">
                        <t t-foreach="move_lines" t-as="move_line" t-key="move_lines_index">
                            <table class="table table-borderless" style="font-size:13px;">
                                <tbody>
                                    <!-- Header -->
                                    <tr style="background-color:#d6dbe1;">
                                        <th colspan="6"/>
                                        <th style="width:10%">Journal</th>
                                        <th style="width:10%">Partner</th>
                                        <th style="width:10%">Reference</th>
                                        <th style="width:10%">Move</th>
                                        <th style="width:10%">Entry label</th>
                                        <th style="width:10%" class="text-right">Debit</th>
                                        <th style="width:10%" class="text-right">Credit</th>
                                        <th style="width:10%" class="text-right">Balance</th>
                                    </tr>

                                    <!-- Partner Group -->
                                    <tr style="background-color:#f0f0f0;font-weight:bold;">
                                        <td colspan="8">
                                            <span t-esc="move_line"/>
                                        </td>
                                        <td colspan="3"/>
                                        <td class="text-right">
                                            <t t-if="total[move_line]['total_debit']"
                                               t-esc="total[move_line]['currency_id']"/>
                                            <t t-if="total[move_line]['total_debit']"
                                               t-esc="total[move_line].get('total_debit')"/>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="total[move_line]['total_credit']"
                                               t-esc="total[move_line]['currency_id']"/>
                                            <t t-if="total[move_line]['total_credit']"
                                               t-esc="total[move_line].get('total_credit')"/>
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="total[move_line]['currency_id']"/>
                                            <t t-esc="total[move_line]['total_debit'] - total[move_line]['total_credit']"/>
                                        </td>
                                    </tr>

                                    <!-- Detail lines -->
                                    <t t-foreach="data[move_line]" t-as="valuelist" t-key="valuelist_index">
                                        <tr>
                                            <td colspan="6">
                                                <span>
                                                    <t t-esc="valuelist['date']"/>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <t t-esc="valuelist['journal_id'][1]"/>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <t t-if="valuelist['partner_id']">
                                                        <t t-esc="valuelist['partner_id'][1]"/>
                                                    </t>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <t t-if="valuelist['ref']"
                                                       t-esc="valuelist['ref']"/>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <t t-if="valuelist['move_name']"
                                                       t-esc="valuelist['move_name']"/>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <t t-if="valuelist['name']"
                                                       t-esc="valuelist['name']"/>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <t t-if="valuelist['debit']" t-esc="valuelist['debit']"/>
                                                    <t t-esc="total[move_line]['currency_id']"/>
                                                    <t t-if="valuelist['debit']"
                                                       t-esc="valuelist.get('debit_display')"/>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <t t-if="valuelist['credit']" t-esc="valuelist['credit']"/>
                                                    <t t-esc="total[move_line]['currency_id']"/>
                                                    <t t-if="valuelist['credit']"
                                                       t-esc="valuelist.get('credit_display')"/>
                                                </span>
                                            </td>
                                            <td/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>

                    <!-- Grand Total -->
                    <table class="table table-borderless">
                        <tbody>
                            <tr style="font-weight:bold;">
                                <td style="width:60%;">Total</td>
                                <td style="width:10%" class="text-right">
                                    <t t-out="grand_total.get('currency')"/>
                                    <t t-out="grand_total.get('total_debit')"/>
                                </td>
                                <td style="width:10%" class="text-right">
                                    <t t-out="grand_total.get('currency')"/>
                                    <t t-out="grand_total.get('total_credit')"/>
                                </td>
                                <td style="width:10%" class="text-right">
                                    <t t-out="grand_total.get('currency')"/>
                                    <t t-out="float(grand_total.get('total_debit')) - float(grand_total.get('total_credit'))"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
