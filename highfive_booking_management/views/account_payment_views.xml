<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Payment Form -->
    <record id="view_account_payment_form_inherit_booking" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.booking</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='memo']" position="after">
                <field name="highfive_booking_id" readonly="1"
                       invisible="not highfive_booking_id"/>
                <field name="highfive_payment_id" readonly="1"
                       invisible="not highfive_payment_id"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Payment Breakdown"
                      invisible="not highfive_booking_id">
                    <group>
                        <group>
                            <field name="payment_card" readonly="1"/>
                            <field name="payment_wallet" readonly="1"/>
                        </group>
                        <group>
                            <field name="payment_coupon" readonly="1"/>
                            <field name="transaction_reference" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>