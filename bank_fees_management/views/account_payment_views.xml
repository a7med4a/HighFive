<odoo>
    <record id="view_account_payment_form_inherit_bank_fees" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.bank.fees</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="journal_type" invisible="1"/>
                <field name="bank_fees_amount" invisible="journal_type != 'bank'" readonly="(state in ['paid', 'cancel', 'in_process'])"/>
                <field name="bank_fees_account_id" invisible="journal_type != 'bank'"/>
            </xpath>
        </field>
    </record>
</odoo>

